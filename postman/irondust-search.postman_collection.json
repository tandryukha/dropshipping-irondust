{
  "info": {
    "name": "IronDust Search API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "b3c9a8a0-0c2f-4d84-9a2d-3e6d4f1fdddd"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/healthz",
          "host": ["{{baseUrl}}"],
          "path": ["healthz"]
        }
      }
    },
    {
      "name": "Ingest Full",
      "request": {
        "method": "POST",
        "header": [
          { "key": "x-admin-key", "value": "{{adminKey}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/ingest/full",
          "host": ["{{baseUrl}}"],
          "path": ["ingest","full"]
        }
      }
    },
    {
      "name": "Ingest Products (by IDs)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "x-admin-key", "value": "{{adminKey}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"ids\": [31476, 31477]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/ingest/products",
          "host": ["{{baseUrl}}"],
          "path": ["ingest","products"]
        }
      }
    },
    {
      "name": "Search",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"q\": \"citrulline\",\n  \"filters\": {\n    \"in_stock\": true\n  },\n  \"sort\": [\"price_cents:asc\"],\n  \"page\": 1,\n  \"size\": 5\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/search",
          "host": ["{{baseUrl}}"],
          "path": ["search"]
        }
      }
    },
    {
      "name": "Product by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/products/{{productId}}",
          "host": ["{{baseUrl}}"],
          "path": ["products","{{productId}}"]
        }
      }
    }
  ]
}



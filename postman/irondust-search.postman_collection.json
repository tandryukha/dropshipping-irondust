{
  "info": {
    "name": "IronDust Search API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "b3c9a8a0-0c2f-4d84-9a2d-3e6d4f1fdddd"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/healthz",
          "host": ["{{baseUrl}}"],
          "path": ["healthz"]
        }
      }
    },
    {
      "name": "Hybrid Search",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"q\": \"vegan protein\",\n  \"filters\": {\n    \"in_stock\": true\n  },\n  \"page\": 1,\n  \"size\": 6\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/search/hybrid",
          "host": ["{{baseUrl}}"],
          "path": ["search","hybrid"]
        }
      }
    },
    {
      "name": "Vector Reindex All",
      "request": {
        "method": "POST",
        "header": [
          { "key": "x-admin-key", "value": "{{adminKey}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/vectors/reindex/all",
          "host": ["{{baseUrl}}"],
          "path": ["vectors","reindex","all"]
        }
      }
    },
    {
      "name": "Vector Reindex by IDs",
      "request": {
        "method": "POST",
        "header": [
          { "key": "x-admin-key", "value": "{{adminKey}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"ids\": [\"wc_31476\", \"wc_31477\"]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/vectors/reindex",
          "host": ["{{baseUrl}}"],
          "path": ["vectors","reindex"]
        }
      }
    },
    {
      "name": "Ingest Full",
      "request": {
        "method": "POST",
        "header": [
          { "key": "x-admin-key", "value": "{{adminKey}}" },
          { "key": "x-clear-ai-cache", "value": "true" },
          { "key": "x-clear-translation-cache", "value": "true" }
        ],
        "url": {
          "raw": "{{baseUrl}}/ingest/full",
          "host": ["{{baseUrl}}"],
          "path": ["ingest","full"]
        }
      }
    },
    {
      "name": "Ingest Products (by IDs)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "x-admin-key", "value": "{{adminKey}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"ids\": [31476, 31477]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/ingest/products",
          "host": ["{{baseUrl}}"],
          "path": ["ingest","products"]
        }
      }
    },
    {
      "name": "Search",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"q\": \"citrulline\",\n  \"filters\": {\n    \"in_stock\": true\n  },\n  \"sort\": [\"price_cents:asc\"],\n  \"page\": 1,\n  \"size\": 5\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/search",
          "host": ["{{baseUrl}}"],
          "path": ["search"]
        }
      }
    },
    {
      "name": "Product by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/products/{{productId}}",
          "host": ["{{baseUrl}}"],
          "path": ["products","{{productId}}"]
        }
      }
    }
    ,
    {
      "name": "Product alternatives",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/products/{{productId}}/alternatives?limit=8&lang=en",
          "host": ["{{baseUrl}}"],
          "path": ["products","{{productId}}","alternatives"],
          "query": [
            { "key": "limit", "value": "8" },
            { "key": "lang", "value": "en" }
          ]
        }
      }
    }
  ]
}


